<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
  >

    <TextView
        android:id="@+id/intro_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/prepare_a_companion_to_manage_exam_stress"
        android:textSize="20sp"
        android:textStyle="bold" />

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_below="@+id/intro_home"
    card_view:cardBackgroundColor="#5B7EB2"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="4dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:text="@string/test_anxiety_questionaire"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginEnd="28dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        card_view:cardBackgroundColor="#5B7EB2"
        android:layout_below="@+id/card"
        android:layout_margin="4dp"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="4dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:text="@string/find_out_support_nationwide"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginEnd="28dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>